<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddIncomesActivity">

    <TextView
        android:id="@+id/addIncomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Income"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/incomeNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income Name"
        android:inputType="text"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/addIncomeTitle"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/incomeAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income Amount"
        android:inputType="numberDecimal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/incomeNameInput"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/incomeDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income Date"
        android:inputType="none"
        android:editable="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/incomeAmountInput"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/incomeTimeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Income Time"
        android:inputType="none"
        android:editable="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/incomeDateInput"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/saveIncomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonblue"
        android:textStyle="bold"
        android:layout_below="@id/incomeTimeInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Save Income" />

</RelativeLayout>
